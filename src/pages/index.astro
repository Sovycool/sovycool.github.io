---
import "../styles/global.css";

import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/Hero.astro";
import Section from "../components/Section.astro";
import ProjectCard from "../components/ProjectCard.astro";
import InspirationCard from "../components/InspirationCard.astro";
import SkillIcon from "../components/SkillIcon.astro";
import { featured } from "../data/projects";
import { inspirations } from "../data/inspirations";
import { icons } from "../data/skills";
---
<BaseLayout>
  <Hero />

  <div class="flex flex-col-reverse pt-20 md:flex-row-reverse items-center gap-6 md:gap-10 px-4 sm:px-8 md:px-10 lg:px-60 mb-20">
  <!-- Image d'abord en mobile, à gauche en desktop -->
  <img class="order-1 md:order-1 w-auto h-auto rounded-2xl object-cover" src="/images/pp.webp" alt="C'est moiii" loading="lazy"/>

  <!-- Texte ensuite en mobile, à droite en desktop -->
  <Section id="about" title="À propos" subtitle="Un profil curieux et créatif" class="order-2 md:order-2 w-full">
    <div class="w-full">
      <div class="glass p-5 sm:p-6 rounded-2xl shadow-neon">
        <p>
          Je m'appelle <span class="neon-text"><strong>Sovann Dufresne</strong></span> — étudiant EPITECH Mulhouse.
          J'adore concevoir des expériences visuelles et ludiques, mêlant
          design et gameplay. Ce portfolio met en avant mes projets,
          dont mon jeu principal
          <a href="https://github.com/Sovycool/TheGreed" class="neon-text"><strong>The Greed</strong></a>.
          Tout ce que je veux, c'est créer des univers immersifs avec des mécaniques
          de jeu passionnantes.
        </p>
      </div>
    </div>
  </Section>
</div>

  <Section id="projects" title="Projets phares" subtitle="Sélection récente">
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 [column-fill: balance]">
      {featured.map(p => <ProjectCard {...p} />)}
    </div>
  </Section>

  <Section id="skills" title="Compétences & outils" subtitle="Mes technos et outils de prédilection">
    <div class="grid grid-cols-3 sm:grid-cols-4 md:grid-cols-5 lg:grid-cols-6 xl:grid-cols-8 gap-4 place-items-center">
      {icons.map(s => <SkillIcon {...s} />)}
    </div>
  </Section>

  <Section id="mood" title="Passions & inspirations" subtitle="Ce qui nourrit mon imagination !">
    <div class="columns-1 sm:columns-3 lg:columns-3 xl:columns-3 gap-6 [column-fill: balance]">
      {inspirations.map(p => <InspirationCard {...p} />)}
    </div>
  </Section>

  <Section id="contacts" title="Contact">
    <div class="flex flex-wrap gap-4">
      <a class="glass px-4 py-2 text-[var(--text)] ring-2 ring-[var(--accent)] shadow-neon" href="mailto:sovann.dufresne@epitech.eu">📧 Email</a>
      <a class="glass px-4 py-2 text-[var(--text)] ring-2 ring-[var(--accent)] shadow-neon" href="https://github.com/sovycool/" target="_blank">🐙 GitHub</a>
      <a class="glass px-4 py-2 text-[var(--text)] ring-2 ring-[var(--accent)] shadow-neon" href="https://www.linkedin.com/in/sovann-dufresne/" target="_blank">💼 LinkedIn</a>
    </div>
  </Section>

</BaseLayout>

<script>
  // Observe chaque élément .reveal et lui ajoute .in-view quand il entre dans le viewport.
  const io = new IntersectionObserver((entries, obs) => {
    for (const entry of entries) {
      if (entry.isIntersecting) {
        entry.target.classList.add('in-view');
        obs.unobserve(entry.target); // pas besoin de ré-observer
      }
    }
  }, { rootMargin: '0px 0px -10% 0px', threshold: 0.1 });

  // On observe tout ce qui a la classe .reveal
  const els = document.querySelectorAll('.reveal');
  els.forEach((el) => io.observe(el));
</script>